<%- include("particules/header.ejs") -%>
    <header>
        <h1>Anonymous Poster</h1>
    </header>
    <div class="account">
        <form action="/signup" method="post" id="account" autocomplete="off">
            <div class="row mb-3">
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" name="account" class="form-control" id="Email" required>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" name="key" class="form-control" id="Password" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>

    </div>
    <%- include("particules/footer.ejs") -%>